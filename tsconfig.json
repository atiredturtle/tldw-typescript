{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "strict": true,
        "typeRoots": [ "node_modules/@types" ],
        "plugins": [
            {
              "name": "typescript-tslint-plugin"
            }
          ]
    }
}